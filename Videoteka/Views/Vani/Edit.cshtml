@model Videoteka.Models.Vani

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Vani</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Film" class="control-label"></label>
                <input asp-for="Film" class="form-control" />
                <span asp-validation-for="Film" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Izašao" class="control-label"></label>
                <input asp-for="Izašao" class="form-control" />
                <span asp-validation-for="Izašao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
